<%- include ('partials/header.ejs'); %>
<body>
    <%- include ('partials/navbar.ejs'); %>
    <div class="container">
        <hr>
        <h1><%= perguntas.titulo %></h1>
        <p><%= perguntas.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label>Resposta:</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="perguntas" value="<%= perguntas.id %>">
            <button type="submit" class="btn-success">Responder</button>
        </form>
        <hr>
        <h3>Repostas</h3>
        <hr>
        <% resposta.forEach(resposta => {%>
            <br>
             <div class="card">
                <div class="card-body">   
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs'); %>
